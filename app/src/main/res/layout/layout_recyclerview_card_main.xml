<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/mainCardIV"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/mainCardIV"
            android:padding="@dimen/default_padding">
            <TextView
                android:id="@+id/mainCardNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cygnus"
                android:textColor="@color/colorBaseBlackText"
                android:textSize="@dimen/font_size_xxlarge"/>
            <TextView
                android:id="@+id/mainCardTotalStarTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main stars: 0"
                android:layout_below="@id/mainCardNameTV"
                android:textSize="@dimen/font_size_large"/>
            <ImageView
                android:id="@+id/mainCardFavIV"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_star_border_grey_24dp"
                />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>